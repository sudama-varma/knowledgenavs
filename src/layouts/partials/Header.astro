---
import Logo from "@components/Logo.astro";
import menu from "@config/menu.json";
import { FaFacebookF, FaTwitter } from "react-icons/fa6";
import { IoSearch } from "react-icons/io5/index.js";

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;
---

<header class="header py-[8px] px-[1rem] mx-auto shadow-md">
  <nav class="navbar xl:container mx-auto px-[15px] px-[20px]">
    <!-- logo -->
    <div class="order-0">
      <Logo />
    </div>
    <div class=" md:w-[calc(100%-185px)] flex items-center lg:gap-[20px] lg:pe-[60px]  md:justify-between ">
      <!-- navbar toggler -->
      <input id="nav-toggle" type="checkbox" class="hidden" />
      <label
        id="show-button"
        for="nav-toggle"
        class="order-2 flex cursor-pointer items-center text-[#000] md:order-1 md:hidden"
      >
        <svg class="h-6 fill-current" viewBox="0 0 20 20">
          <title>Menu Open</title>
          <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
        </svg>
      </label>
      <label
        id="hide-button"
        for="nav-toggle"
        class="order-2 hidden cursor-pointer items-center text-[#000] md:order-1"
      >
        <svg class="h-6 fill-current" viewBox="0 0 20 20">
          <title>Menu Close</title>
          <polygon
            points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
            transform="rotate(45 10 10)"></polygon>
        </svg>
      </label>
      <!-- /navbar toggler -->

      <ul
        id="nav-menu"
        class="navbar-nav order-3 hidden w-full md:order-1 md:flex md:w-auto gap-[10px]"
      >
        {
          main &&
            main.map((nav) => (
              <li class="nav-item">
                <a
                  href={nav.url}
                  class="lg:text-[16px] md:text-[14px] font-[500] text-left text-[#00316c] block hover:text-[#bf1d20] ease-in-out duration-[.5s]"
                >
                  {nav.name}
                </a>
              </li>
            ))
        }
              <div class="order-1 flex flex sm:max-flex sm:flex md:hidden">
                <a
                  class="mr-4 inline-block cursor-pointer p-2 text-xl text-[#000] transition hover:text-[#DB3334] md:mr-0"
                  href="/search/"
                  title="search"
                  aria-label="search"
                >
                  <IoSearch />
                </a>
                <div class="w-full flex items-center social_icons">
                  
                  <span class="text-[#fff] text-[14px]"><a href="#" class="flex items-center justify-center"><FaTwitter/></a></span>
                  <span class="text-[#fff] text-[14px]"><a href="#" class="flex items-center justify-center"><FaFacebookF/></a></span>
                </div>
              </div>
      </ul>
      <div class="order-1 ml-auto md:flex md:order-2 md:ml-0 hidden sm:max-hidden">
        <a
          class="mr-4 inline-block cursor-pointer p-2 text-xl text-[#000] transition hover:text-[#DB3334] md:mr-0"
          href="/search/"
          title="search"
          aria-label="search"
        >
          <IoSearch />
        </a>
        <div class="w-full flex items-center social_icons">
          
          <span class="text-[#fff] text-[14px]"><a href="#" class="flex items-center justify-center"><FaTwitter/></a></span>
          <span class="text-[#fff] text-[14px]"><a href="#" class="flex items-center justify-center"><FaFacebookF/></a></span>
        </div>
      </div>
    </div>
  </nav>
</header>
