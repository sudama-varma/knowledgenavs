---
import Base from "@layouts/Base.astro";
import { site } from "@lib/strapi";
const content = site[0].aboutUs;
---

<Base>
  <section class="section pt-[10px]">
    <div class="container">
      <div class="w-full">
        <div
          class="mb-8 text-left text-[#000] md:flex bg-[#EBF1F8] items-end border-[#dbe4ef] border-[1px]"
        >
          <div class="basis-[65%]">
            <img src="/images/about.webp" alt="oops" />
          </div>
          <div class="basis-[35%] p-[20px]">
            <h2 class="text-[#000]"><strong>About Us</strong></h2>
          </div>
        </div>
      </div>
      <div class="max-w-[750px] mx-auto">
        <div class="w-full" set:html={content}>
        </div>
      </div>
    </div>
  </section>
</Base>
