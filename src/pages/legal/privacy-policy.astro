---
import Base from "@layouts/Base.astro";
import { site } from "@lib/strapi";
const content = site[0].privacyPolicy;
---

<Base>
  <section class="section pb-0 pt-[10px]">
    <div class="container">
      <div class=" condation-text">
        <div class="mb-16 text-left text-[#000]">
          <div
            class="w-full p-[10px] mb-[20px]"
          >
            <h1 class="md:text-[2.5rem] text-[2.5rem] text-[#000]">
              Privacy Policy
            </h1>
          </div>
          <div
            class="text-[#000]"
          >
            <div set:html={content} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
