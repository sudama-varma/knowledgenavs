---
import Base from "@layouts/Base.astro";
import { site } from "@lib/strapi";
const content = site[0].termsOfAgreement;
---

<Base>
  <section class="section pb-0 pt-[10px]">
    <div class="container">
      <div class="max-w-[760px] mx-auto condation-text">
        <div class="mb-16 text-left text-[#000]">
          <div
            class="w-full text-center bg-[#f6f9fc] p-[10px] border-[1px] border-[#EBF1F8] mb-[20px]"
          >
            <h1 class="md:text-[36px] text-[22px] text-[#000]">
              Terms of Service
            </h1>
          </div>
          <div class="w-full inline-block"></div>
          <div
            class="text-[#000] first-letter:text-7xl first-letter:text-slate-900 first-letter:mr-2 first-letter:float-left first-line:leading-[80px]"
          >
            <div set:html={content} />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
