---
import Base from "@layouts/Base.astro";
import "../../styles/nubia-theme.scss";
import { site } from "@lib/strapi";
const content = site[0].cookiePolicy;
---

<Base>
  <section class="section pb-0 pt-[10px]">
    <div class="container">
      <div class="max-w-[760px] mx-auto condation-text">
        <div class="mb-16 text-left text-[#000]">
          <div
            class="w-full text-center bg-[#f6f9fc] p-[10px] border-[1px] border-[#EBF1F8] mb-[20px]"
          >
            <h1 class="md:text-[36px] text-[22px] text-[#000] mb-0">DMCA Policy</h1>
          </div>

          <div class="c-content">
            <header class="entry-header">
              <h1 class="entry-title">DMCA Policy</h1>
              <div class="post-meta-info">
                <div></div>
              </div>
            </header>
            <div class="entry-content" set:html={content}>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
